<div class="jumbotron p-3 mb-2 bg-secondary text-white">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  <p class="lead">
    E-mail: <%= @friend.email %>  |
    Phone: <%= @friend.phone %>  |
    Twitter: <%= @friend.twitter %> 
  </p>
  <%= link_to 'Edit', edit_friend_path(@friend),
class:"btn btn-secondary"
 %>
 <%= link_to 'Remove', @friend, method: :delete, data: { confirm: 'Are you sure?' },
class:"btn btn-danger" %>
<%= link_to 'Back', friends_path,
class:"btn btn-dark"
 %>
  </h1>
  
</div>